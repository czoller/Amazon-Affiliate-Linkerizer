{
	"name": "Amazon Affiliate Linkerizer",
	"description": "Adds an address bar icon that shortens and shrinks Amazon links, adds your affiliate code, and copies to your clipboard.",
	"icons": {
		"128": "images/icon128.png",
		"32": "images/icon32.png"
	},
	"manifest_version": 2,
	"options_ui": {
		"page": "settings/options.html"
	},
	"page_action": {
		"default_icon": "images/icon64.png",
		"default_title": "Amazon Affiliate Link Maker"
	},
	"background": {
		"page": "background.html"
	},
	"permissions": [
		"tabs",
		"clipboardWrite",
		"storage",
		"https://www.amazon.com/*",
		"https://www.amazon.ca/*",
		"https://www.amazon.co.uk/*",
		"https://www.amazon.de/*",
		"https://www.amazon.es/*",
		"https://www.amazon.fr/*",
		"https://www.amazon.it/*",
		"https://www.amazon.nl/*",
		"https://www.amazon.ie/*",
		"https://www.amazon.mx/*",
		"https://www.amazon.au/*",
		"https://www.amazon.br/*",
		"https://www.amazon.co.jp/*",
		"https://www.amazon.cn/*",
		"https://www.amazon.in/*"
   ],

	"version": "18.1.18"
}
